{% macro buttonLink(label, href) -%}
<table border="0" cellpadding="0" cellspacing="0" role="presentation" style="border-collapse:separate;line-height:100%;">
    <tr>
        <td align="center" bgcolor="#0000BF" role="presentation" style="border:none;cursor:auto;padding: 20px 32px;background:#0000BF;" valign="middle">
            <a
                href="{{ href }}"
                style="
                    background: #0000BF;
                    color: #ffffff;
                    font-size: 16px;
                    font-weight: 500;
                    height: 24px;
                    line-height: 24px;
                    text-align: center;
                    display: inline-block;
                    text-decoration: none;
                "
            >{{ label }} <img src="{{ image_location }}/hds-icon-arrow-right.png" style="vertical-align: middle; margin-left: 12px;" /></a>
        </td>
    </tr>
</table>
{%- endmacro %}

{% macro logo(variant="header", lang="fi") -%}
{% with image_path, alt = [image_location + "/helsinki-logo-" + variant + "-" + lang + ".png", "Helsingfors" if lang == "sv" else "Helsinki"] %}
    {% if variant == "header" %}
        <img
            src="{{ image_path }}"
            alt="{{ alt }}"
            style="
                display: block;
                height: 44px;
                margin-bottom: 40px;
                max-width: 100%;
                outline: 0;
                width: auto;
            "
        />
    {% endif %}
    {% if variant == "footer" %}
        <img
            src="{{ image_path }}"
            alt="{{ alt }}"
            style="
                display: block;
                height: 60px;
                margin-bottom: 24px;
                margin-top: 56px;
                max-width: 100%;
                outline: 0;
                width: auto;
            "
        />
    {% endif %}
{% endwith %}
{%- endmacro %}

{% macro link(label, href) -%}
<a
    href="{{ href }}"
    style="color: #0e04c7;text-decoration: none;"
>
    {{ label }}
</a>
{%- endmacro %}
